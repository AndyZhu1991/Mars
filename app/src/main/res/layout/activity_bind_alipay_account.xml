<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.koolew.mars.BindAlipayAccountActivity">

    <com.koolew.mars.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/koolew_red"
        app:title_text="@string/bind_account"
        app:right_text="@string/save"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:background="@mipmap/shadow" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/alipay_full_logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E6E9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/alipay_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical|left"
            android:hint="@string/input_alipay_id"
            android:paddingLeft="16dp"
            android:textColorHint="#9B9B9B"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onAlipayClear"
            android:padding="16dp"
            android:src="@mipmap/ic_x" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E6E9" />
</LinearLayout>
