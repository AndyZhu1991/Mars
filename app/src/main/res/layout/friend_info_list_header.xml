<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:AvatarLinearContainer="http://schemas.android.com/apk/res-auto"
    xmlns:BigCountView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/blur_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="16dp"
                app:border_width="3dp"
                app:border_color="@color/avatar_gray_border"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_toRightOf="@id/avatar"
                android:layout_alignTop="@id/avatar"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.koolew.mars.view.UserNameView
                    android:id="@+id/name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:textSize="18sp"
                    app:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/koolew_light_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/operation_image"
                    android:layout_width="44dp"
                    android:layout_height="44dp" />
                <TextView
                    android:id="@+id/operation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/avatar"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fans_count_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/drawer_koo_coin_border"/>

                <TextView
                    android:id="@+id/follows_count_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/drawer_koo_coin_border"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:background="@drawable/top_corner_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/koo_common_topic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp">

            <com.koolew.mars.view.BigCountView
                android:id="@+id/count_koo"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                BigCountView:description_image="@mipmap/ic_count_koo"
                BigCountView:description_text="@string/got_koo" />

            <com.koolew.mars.view.BigCountView
                android:id="@+id/count_common_topic"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                BigCountView:description_text="@string/common_topic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_friend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/common_friend_title_layout"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#F9F9F9"
                android:gravity="center">

                <TextView
                    android:id="@+id/common_friend_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_friend"
                    android:textColor="@color/koolew_light_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="7dp"
                    android:src="@mipmap/down_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/horizontal_dash_line" />

            <com.koolew.mars.view.AvatarLinearContainer
                android:id="@+id/avatar_container"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                AvatarLinearContainer:avatar_clickable="true"
                AvatarLinearContainer:avatar_margin_lr="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/joined_topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:text="@string/other_joined_topic"
            android:textColor="@color/koolew_light_gray"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>