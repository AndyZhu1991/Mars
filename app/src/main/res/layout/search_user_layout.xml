<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/edit_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_user_window_search_height"
        android:layout_marginLeft="@dimen/search_user_window_search_margin"
        android:layout_marginRight="@dimen/search_user_window_search_margin">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="70dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/koolew_gray"
            android:hint="Search"
            android:textColorHint="#BEBEBE"
            android:background="@android:color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_search_gray"/>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="#F5F5F5"
        android:visibility="invisible"/>

</LinearLayout>