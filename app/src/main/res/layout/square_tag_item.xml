<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.5dp"
    android:orientation="vertical"
    android:background="@drawable/feeds_card_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/tag_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/horizontal_dash_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2.5dp"
        android:paddingTop="2.5dp"
        android:paddingRight="2.5dp"
        android:orientation="horizontal">

        <include layout="@layout/square_tag_item_item"
            android:id="@+id/item0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2.5dp"/>

        <include layout="@layout/square_tag_item_item"
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2.5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2.5dp"
        android:paddingRight="2.5dp"
        android:paddingBottom="2.5dp"
        android:orientation="horizontal">


        <include layout="@layout/square_tag_item_item"
            android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2.5dp"/>

        <com.koolew.mars.view.RatioFrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2.5dp"
            app:widthRatio="4.0"
            app:heightRatio="3.0">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_pk_entry"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/square_vote_shader"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="@string/go_to_vote"/>
        </com.koolew.mars.view.RatioFrameLayout>
    </LinearLayout>
</LinearLayout>