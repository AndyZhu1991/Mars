<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.5dp"
    android:orientation="vertical"
    android:background="@drawable/feeds_card_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/tag_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/horizontal_dash_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <com.koolew.mars.view.RatioFrameLayout
            android:id="@+id/thumb_frame0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2.5dp"
            app:widthRatio="4.0"
            app:heightRatio="3.0">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/first_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_corner_radius="4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/feeds_thumb_shader"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_play"/>
        </com.koolew.mars.view.RatioFrameLayout>

        <com.koolew.mars.view.RatioFrameLayout
            android:id="@+id/thumb_frame1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            app:widthRatio="4.0"
            app:heightRatio="3.0">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/second_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/feeds_thumb_shader"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_play"/>
        </com.koolew.mars.view.RatioFrameLayout>

        <com.koolew.mars.view.RatioFrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            app:widthRatio="4.0"
            app:heightRatio="3.0">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/third_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_corner_radius="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/feeds_last_thumb_shader"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/see_more"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:drawableTop="@mipmap/ic_feeds_item_go"/>
        </com.koolew.mars.view.RatioFrameLayout>
    </LinearLayout>
</LinearLayout>