<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.koolew.mars.PlayActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"/>

    <FrameLayout
        android:id="@+id/display_area"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/display_area_padding">

            <SurfaceView
                android:id="@+id/play_surface"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/video_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/finished_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/play_round_finish"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:indeterminate="true" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/top_result_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@color/play_left_color"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/left_result_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="48sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="V"
                        android:textColor="#FF9D4B"
                        android:textSize="36sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/kooed"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/left_koo_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@mipmap/ic_koo_play_big"
                        android:drawablePadding="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/left_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:border_width="3dp"
                    app:border_color="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/left_follow_btn"
                    android:layout_width="90dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/play_follow_btn_bg"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@color/play_right_color"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/right_result_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="48sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="S"
                        android:textColor="#50B8C6"
                        android:textSize="36sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/kooed"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/right_koo_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@mipmap/ic_koo_play_big"
                        android:drawablePadding="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/right_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:border_width="3dp"
                    app:border_color="@android:color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/right_follow_btn"
                    android:layout_width="90dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/play_follow_btn_bg"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/bottom_left_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/play_left_color">

                <TextView
                    android:id="@+id/left_user_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/left_user_desc"
                    android:textSize="36sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/left_user_desc"
                    android:layout_alignParentRight="true"
                    android:text="V"
                    android:textColor="#FF9D4B"
                    android:textSize="36sp"/>

                <TextView
                    android:id="@+id/left_support_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/left_user_desc"
                    android:background="@drawable/play_support_btn_bg_left"
                    android:gravity="center"
                    android:text="@string/support_ta"
                    android:textColor="#FFAB4B"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_right_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/play_right_color">

                <TextView
                    android:id="@+id/right_user_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/right_user_desc"
                    android:textSize="36sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/right_user_desc"
                    android:layout_alignParentLeft="true"
                    android:text="S"
                    android:textColor="#50B8C7"
                    android:textSize="36sp"/>

                <TextView
                    android:id="@+id/right_support_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/right_user_desc"
                    android:background="@drawable/play_support_btn_bg_right"
                    android:gravity="center"
                    android:text="@string/support_ta"
                    android:textColor="#50B8C7"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_result_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@android:color/black"
            android:visibility="invisible">

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:text="@string/guess_false_message"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/ic_coin_big"/>
            
            <TextView
                android:id="@+id/next_group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="16sp"
                android:textColor="#4A4A4A"
                android:text="@string/next_step"
                android:gravity="center"
                android:background="@drawable/play_btn_bg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finish_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/black"
            android:visibility="invisible">

            <TextView
                android:id="@+id/congratulation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="#9B9B9B"
                android:text="Congratulations!"/>

            <TextView
                android:id="@+id/finished_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#696969"
                android:text="@string/judge_mission_completed"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="10dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="@string/next_round_text_head"/>

                <TextView
                    android:id="@+id/next_round_count_down_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:text="00:00:00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="@string/next_round_text_tail"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:id="@+id/play_next_round_immediately"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/play_btn_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:text="@string/next_round_immediately"/>

                <TextView
                    android:id="@+id/next_round_pay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@mipmap/ic_coin_play_next_round"
                    android:textColor="#FFAB4B"
                    android:textSize="16sp"
                    android:text="-10"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

<FrameLayout
    android:id="@+id/block_touch_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"/>
</FrameLayout>

</FrameLayout>
