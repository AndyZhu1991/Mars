<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/explain_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:text="@string/padding_friend_label"
            android:textColor="@color/koolew_gray"
            android:textSize="14sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="183dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/friend_item_top_info_bg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_remove"
                            android:layout_width="52dp"
                            android:layout_height="27dp"
                            android:background="@drawable/btn_bg_remove"
                            android:text="@string/remove"
                            android:textColor="@color/friend_item_common_text_color"
                            android:textSize="@dimen/friend_item_common_text_size"
                            android:focusable="false"/>

                        <Button
                            android:id="@+id/btn_accept_add"
                            android:layout_width="52dp"
                            android:layout_height="27dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_bg_accept_solid"
                            android:text="@string/accept"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/friend_item_common_text_size"
                            android:focusable="false"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"/>

                            <TextView
                                android:id="@id/nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#3E5467"
                                android:textSize="18sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"/>

                            <TextView
                                android:id="@+id/contact_friend_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/contact_friend"
                                android:textColor="@color/friend_item_common_text_color"
                                android:textSize="@dimen/friend_item_common_text_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="5"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/koo_topic_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/friend_item_koo_topic_border">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerInParent="true">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/got_koo"
                                        android:textColor="@color/friend_item_common_text_color"
                                        android:textSize="@dimen/friend_item_common_text_size" />

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="4dp"
                                        android:src="@mipmap/ic_count_koo" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/count_koo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/friend_item_big_num_color"
                                    android:textSize="@dimen/friend_item_big_num_text_size" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/friend_item_koo_topic_border">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/common_topic"
                                    android:textColor="@color/friend_item_common_text_color"
                                    android:textSize="@dimen/friend_item_common_text_size" />

                                <TextView
                                    android:id="@+id/count_common_topic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/friend_item_big_num_color"
                                    android:textSize="@dimen/friend_item_big_num_text_size" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/common_friend_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/friend_item_bottom_info_bg">

                    <TextView
                        android:id="@+id/common_friend_label"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/common_friend"
                        android:textSize="@dimen/friend_item_common_text_size"
                        android:textColor="@color/friend_item_common_text_color"
                        android:background="@drawable/friend_item_gradient_bg"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@mipmap/horizontal_dash_line"/>

                    <LinearLayout
                        android:id="@+id/common_friend_avatar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/green_border_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/friend_meet_padding_green_border"/>
        </android.support.v7.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:border_color="@color/koolew_light_green"
            app:border_width="3dp"
            android:translationZ="5dp"/>
    </RelativeLayout>
</RelativeLayout>