<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#A087F5"
        android:textSize="14sp"
        android:text="@string/movie_type_string"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/koolew_dark_gray"
        android:textSize="18sp"/>

    <com.koolew.mars.view.MovieTitleVideoView
        android:id="@+id/video_view"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/video_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="@string/video_count_label"
        android:textColor="#99A5AD"
        android:drawableLeft="@mipmap/ic_video_gray"
        android:drawablePadding="3dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/horizontal_dash_line" />
</LinearLayout>