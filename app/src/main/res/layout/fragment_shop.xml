<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="6dp"
            android:drawableStart="@mipmap/ic_buy_coin"
            android:text="@string/buy_coin"
            android:textColor="#4A4A4A"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <com.koolew.mars.view.SellCoinItemView
                android:id="@+id/sell_coin1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:ic_coin="@mipmap/ic_coin_count_level1"/>

            <com.koolew.mars.view.SellCoinItemView
                android:id="@+id/sell_coin2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:ic_coin="@mipmap/ic_coin_count_level2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp">

            <com.koolew.mars.view.SellCoinItemView
                android:id="@+id/sell_coin3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:ic_coin="@mipmap/ic_coin_count_level3"/>

            <com.koolew.mars.view.SellCoinItemView
                android:id="@+id/sell_coin4"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:ic_coin="@mipmap/ic_coin_count_level4"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F000000">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>
