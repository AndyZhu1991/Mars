<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/square_item_padding_half">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@color/koolew_gray"
        android:background="@drawable/square_item_title_bg"/>

    <FrameLayout
        android:id="@+id/thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_below="@id/title">
    
        <ImageView
            android:id="@+id/video_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
        <ImageView
            android:layout_width="21dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_play"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumb_layout"
        android:orientation="vertical"
        android:background="@drawable/square_item_koo_bg">

        <TextView
            android:id="@+id/koo_total"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@android:color/white"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/ic_count_koo"
            android:gravity="center_vertical|right"
            android:paddingRight="4dp"
            android:textColor="#FC7B7B"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/fans_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/koo_total"
            android:orientation="horizontal">

            <TextView
                android:layout_width="14dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/square_top_fans_border"
                android:gravity="center"
                android:text="@string/top_fans"
                android:textColor="#9EADB7"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/first_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="#696969"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/first_koo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@mipmap/ic_koo_square_gray"
                        android:textColor="#9B9B9B"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@mipmap/horizontal_dash_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/second_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="#696969"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/second_koo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@mipmap/ic_koo_square_gray"
                        android:textColor="#9B9B9B"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/thumb_layout"
        app:border_color="@color/avatar_gray_border"
        app:border_width="1dp"/>
</RelativeLayout>