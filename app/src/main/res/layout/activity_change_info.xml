<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.koolew.mars.ChangeInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/blur_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.koolew.mars.view.TitleBarView
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_below="@id/title_bar"
                android:layout_centerHorizontal="true"
                app:border_width="3dp"
                app:border_color="#D8D8D8"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/avatar"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="-10dp"
                android:src="@mipmap/ic_edit"
                android:onClick="onAvatarChange"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/avatar"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#80000000"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/nickname"
                android:layout_alignRight="@id/nickname"
                android:layout_marginTop="11dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_edit"
                android:onClick="onNicknameChange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/nickname"
                android:background="#80FFFFFF"/>

            <com.koolew.mars.view.PhoneNumberView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@id/nickname"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#80000000"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/phone_number"
                android:layout_alignRight="@id/phone_number"
                android:layout_marginTop="11dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_edit"
                android:onClick="onPhoneNumberChange"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/phone_number"
                android:background="#80FFFFFF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/top_corner_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/login_account"
                    android:textSize="12sp"
                    android:textColor="#C8C8C8"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E6E9" />

    <include android:id="@+id/wechat_item"
        layout="@layout/change_info_sns_item"/>

    <include android:id="@+id/qq_item"
        layout="@layout/change_info_sns_item"/>

    <include android:id="@+id/weibo_item"
        layout="@layout/change_info_sns_item"/>

</LinearLayout>
