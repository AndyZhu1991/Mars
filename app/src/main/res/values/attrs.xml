<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="description_text" format="string"/>

    <declare-styleable name="TitleBarView">
        <attr name="title_text" format="string" />
        <attr name="right_image_src" format="reference" />
        <attr name="right_text" format="string" />
    </declare-styleable>

    <declare-styleable name="CoinRuleItem">
        <attr name="description_text" />
        <attr name="coin_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="AvatarLinearContainer">
        <attr name="avatar_margin_lr" format="dimension" />
        <attr name="avatar_border_width" format="dimension" />
        <attr name="avatar_border_color" format="color" />
        <attr name="avatar_border_special_color" format="color" />
        <attr name="avatar_clickable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BigCountView">
        <attr name="description_text" />
        <attr name="description_image" format="reference" />
        <attr name="solid_color" format="color" />
        <attr name="stroke_color" format="color" />
    </declare-styleable>

    <declare-styleable name="BannerPagerIndicator">
        <attr name="indicator_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="VideoPieceView">
        <attr name="mark_color" format="color" />
        <attr name="selected_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ShareChannelView">
        <attr name="type">
            <enum name="weibo" value="0"/>
            <enum name="wechat_monents" value="1"/>
            <enum name="wechat_friends" value="2"/>
            <enum name="qzone" value="3"/>
            <enum name="email" value="4"/>
            <enum name="mms" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="UserNameView">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RedPointView">
        <attr name="needCountNum" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="KoolewVideoView">
        <attr name="looping" format="boolean"/>
    </declare-styleable>
</resources>