                <action android:name="cn.jpush.android.ui.PushActivity"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="com.koolew.mars"/>
            </intent-filter>
        </activity>
        <!-- Required SDK核心功能 -->
